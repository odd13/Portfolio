
<div id="wrapper" style="text-align: center">
  <a href="<%= request.fullpath %>/new">
  <i class="fa fa-plus fa-3x" aria-hidden="true"></i>
</a>

  <h1>Disciplines</h1>
  <table class="table table-sm table-hover table-striped">
    <thead>
      <tr>
         <th>Name</th>
	       <th></th>
      </tr>

    </thead>
  <tbody>

<% @disciplines.each do |t| %>
    <tr>
      <th scope="row"><%= link_to edit_discipline_path(t),:class=>'deco-none nounderline' do %>
        <div id="clickable">
		        <%= t.name %>
		    </div>
      <%end %></th>
	<td class='text-center'>
          <%= button_to discipline_path(t), method: :delete, data: { confirm: "You sure?" }, :class=>'btn btn-xs btn-warning' do %>
             <span class="glyphicon glyphicon-trash"></span>
         <% end %>
        </td>
    </tr>

<% end%>
</tbody>
</table>
